@model EmployeeViewModel
@inject IDepartmentRepository DepartmentRepo
@{
    var departments = new SelectList(  DepartmentRepo.GetAllAsync().Result, "Id", "Name"); 
}
<input asp-for="ImageName" hidden />
<div class="form-group">
    <label class="col-form-label" asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Image" ></label>
    <input  class="form-control" asp-for="Image" />
</div>



<div class="form-group">
    <label class="col-form-label" asp-for="Age">Age</label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary">Salary</label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
   <select class="form-control" asp-items="@departments" asp-for="DepartmentId ">
       <option value="@null">--------- Select Department -------</option>
   </select>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Address">Address</label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email">Email</label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber">Phone Nubmer</label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HireDate">Hire Date</label>
    <input asp-for="HireDate" class="form-control" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="IsActive">Is Active</label>
    <input asp-for="IsActive" class="form-control" />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>