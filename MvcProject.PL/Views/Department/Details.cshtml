@model Department
@{
	ViewData["Title"] = "Details";
}

<h1>Department @Model.Name Details</h1>
<br />


<div class="form-group">
	<label class="col-form-label" asp-for="Code">Code</label>
	<input readonly asp-for="Code" class="form-control" />

</div>
<div class="form-group">
	<label class="col-form-label" asp-for="Name">Name</label>
	<input readonly asp-for="Name" class="form-control" />
</div>

<div class="form-group">
	<label class="col-form-label" asp-for="DateOfCreation">Date of creation</label>
	<input readonly asp-for="DateOfCreation" class="form-control" />
</div>


<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
<a asp-controller="Department" action="Index" class="btn btn-light">Back To List</a>



