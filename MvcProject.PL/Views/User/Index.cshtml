@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Users</h1>
<br />
<form class="row offset-2" asp-action="index">
    <div class="col-8">
        <input class="form-control" type="text" name="SearchValue" placeholder="Employee's Name" />
    </div>
    <div col-4>
        <input type="Submit" class="btn btn-info" value="search" />
    </div>

</form>
<br />

@if(Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-5 table-responsive">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.Fname)</td>
                <td>@Html.DisplayNameFor(U => U.Lname)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach (var User in Model)
                {
                    <tr>
                        <td>@User.Id</td>
                        <td>@User.Fname</td>
                        <td>@User.Lname</td>
                        <td>@User.Email</td>
                        <td>@User.PhoneNumber</td>
                        <td>@string.Join(',', User.Roles)</td>
                        <partial name="_ButtonsPartialView" model="@User.Id" />
                    </tr>

                }
            }
           
        </tbody>
    </table>
}
else
{
    <div>
        <h1>There Is No Users</h1>
    </div>
}

